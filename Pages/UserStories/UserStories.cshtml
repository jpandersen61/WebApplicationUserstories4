@page
@model WebApplicationUserstories.Pages.UserStories.UserStoriesModel
@{
}

<h1>User Stories</h1>


@foreach (var userstory in @Model.UserStories)
{
<div class="card mb-2" style="width: 30rem;">
<div class="card-header p-2">
<h5 class="card-title">(@userstory.Id) @userstory.Title</h5>
</div>
<div class="card-body">
<p class="card-text">@userstory.Description</p>
</div>
<div class="card-footer">
<a class="btn" type="button" asp-page="DeleteUserStory" asp-route-id="@userstory.Id"><i class="fa fa-trash"></i></a>
<a class="btn" type="button" asp-page="UserStoryDetailModel" asp-route-id="@userstory.Id"><i class="fa fa-info-circle"></i></a>
</div>
</div>

}
