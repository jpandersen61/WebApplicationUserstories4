@page
@model WebApplicationUserstories4.Pages.UserStories.CreateUserStoryModel
@{
}

<h1>Create Userstory</h1>

<form method="post">
    
    <div class="form-group">
        <label asp-for="@Model.UserStory.Id" class="control-label"> Id: </label>
        <input asp-for="@Model.UserStory.Id" class="form-control" />
        <span asp-validation-for="@Model.UserStory.Id"  class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="@Model.UserStory.Title" class="control-label"> Title: </label>
        <input asp-for="@Model.UserStory.Title" class="form-control" />
        <span asp-validation-for="@Model.UserStory.Title"  class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="@Model.UserStory.Description" class="control-label"> Description: </label>
        <textarea asp-for="UserStory.Description" cols="120" class="form-control" ></textarea>
        <span asp-validation-for="@Model.UserStory.Description"  class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="@Model.UserStory.BusinessValue" class="control-label"> Business value: </label>
        <input asp-for="@Model.UserStory.BusinessValue" class="form-control" />
        <span asp-validation-for="@Model.UserStory.BusinessValue"  class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="@Model.UserStory.CreationDate" class="control-label"> Creation date: </label>
        <input asp-for="@Model.UserStory.CreationDate" class="form-control" />
        <span asp-validation-for="@Model.UserStory.CreationDate"  class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="@Model.UserStory.Priority" class="control-label"> Priority: </label>
        <input asp-for="@Model.UserStory.Priority" class="form-control" />
        <span asp-validation-for="@Model.UserStory.Priority"  class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="@Model.UserStory.StoryPoints" class="control-label"> Story points: </label>
        <input asp-for="@Model.UserStory.StoryPoints" class="form-control" />
        <span asp-validation-for="@Model.UserStory.StoryPoints"  class="text-danger"></span>
    </div>
    <div>
        <label class="custom-control-label">Business Values</label><br />
        @foreach (var b in Model.BusinessValues)
        {
            <input name="AreChecked" type="checkbox" value="@b" checked="@(b == Model.InitialCheck)" /> @b<br />
        }
    </div>
    <div>
        <label class="custom-control-label">Prioritet</label><br>
        @foreach (var p in Model.PriorityValues)
        {
            <input type="radio" asp-for="Priority" value="@p" /> @p<br />
        }
    </div>
    <div>
        <label class="custom-control-label">Story Points</label><br />
        <select id="StoryPoint" name="StoryPoint" asp-for="StoryPoint"
        class="form-control">
        @foreach (var sp in Model.StoryPoints)
        {
            <option value="@sp">@sp</option>
        }
        </select>
    </div>
    


    
    <div class="form-group">
        <input type="submit" value="Create" class="btn btn-primary" />
    </div>
</form>
